
.box{
  padding: 0 50rpx;
}
.cot{
  padding: 0 40rpx;
}
.title{
  color: #333333;
  font-size: 40rpx;
  font-weight: bold;
  margin: 100rpx 20rpx;
}
.item{
  border-bottom: 1px solid #CD7318;
  height: 90rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
input{
  flex: 1;
}
.item text{
  color: #666666;
}


.login{
  height:90rpx;
  line-height: 90rpx;
  background:linear-gradient(0deg,rgba(254,131,56,1),rgba(255,169,48,1));
  border-radius:10rpx;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
  margin-top: 60rpx;
}
.footer{
  position: absolute;
  bottom: 100rpx;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 22rpx;
  justify-content: center;
}
.footer text{
  color: #FE8737;
}