.getcode{
  font-size: 26rpx
}
.box{
  padding: 0 50rpx;
}
.head{
  padding:  40rpx;
  margin-bottom: 200rpx;
}
.head view:nth-child(1){
  color: #333333;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}
.head view:nth-child(2){
  color: #C2C1C1;
  font-size: 24rpx;
}
.cot{
  height: 60rpx;
  margin: 0 40rpx 60rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #CD7318;
}
.cot input{
  padding: 0 20rpx;
}
.cot text{
  margin-left: auto;
  margin-right: 20rpx;
  color: #999999;
}

.login{
  height:90rpx;
  line-height: 90rpx;
  background:linear-gradient(0deg,rgba(254,131,56,1),rgba(255,169,48,1));
  border-radius:10rpx;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
}

.footer{
  position: absolute;
  bottom: 100rpx;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 22rpx;
  justify-content: center;
}
.footer text{
  color: #FE8737;
}