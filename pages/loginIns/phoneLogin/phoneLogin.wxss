
.box{
  padding: 0 66rpx;
}
.title{
  color: #333333;
  font-size: 40rpx;
  font-weight: bold;
  margin: 100rpx 20rpx;
}
input{
  border: 1px solid #DB844D;
  height: 90rpx;
  border-radius: 45rpx;
  margin: 30rpx 0;
  padding: 0 40rpx;
  font-size: 28rpx;
  margin-bottom: 70rpx;
}
.login{
  margin: 20rpx;
  height:90rpx;
  line-height: 90rpx;
  background:linear-gradient(0deg,rgba(254,131,56,1),rgba(255,169,48,1));
  border-radius:10rpx;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
}
.footer{
  position: absolute;
  bottom: 100rpx;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
