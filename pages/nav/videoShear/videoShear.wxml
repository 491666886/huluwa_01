  <!-- 视频的截取版块 -->
  <view class="videoButtom">
    <view class="point">
      <image src="/images/videoCall/sho.png"></image>
    </view>
<!-- 开始时间和结束时间 -->
    <view class="starT">
      <image src="/images/videoCall/videoStar.png"></image>
      <text class="starTime">开始时间</text>
      <input class="styleInput" value='{{searchText}}' type="idcard" placeholder="时" bindinput="startHour"/>
      <text class="Starmar">:</text>
      <input class="styleInput" value='{{searchText}}' type="idcard" placeholder="分" bindinput="startMinute"/>
      <text class="Starmar">:</text>
      <input class="styleInput" value='{{searchText}}' type="idcard" placeholder="秒" bindinput="startSecond"/>
    </view>
    <view class="starT">
    <image src="/images/videoCall/videoEnd.png"></image>
      <text class="starTime">结束时间</text>
      <input class="styleInput" value='{{hour}}' type="idcard" placeholder="时" bindinput="endHour"/>
      <text class="Starmar">:</text>
      <input class="styleInput" value='{{Minute}}' type="idcard" placeholder="分" bindinput="endMinute"/>
      <text class="Starmar">:</text>
      <input class="styleInput" value='{{second}}' type="idcard" placeholder="秒" bindinput="endSecond"/>
    </view>
    <view class="starT">
      <image src="/images/videoCall/updateName.png"></image>
      <text class="starTime">取个名字吧</text>
      <input class="videoName" type="text" placeholder="视频的名称"  bindinput="videoName"/>
    </view>
    <view>
      <button   disabled="{{disabled}}" class="next" bindtap="codRow">确定</button>
