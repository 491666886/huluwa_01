<view class="w">

  <!-- 提示 -->
  <view class="hint" wx-if="{{hint}}">
    <view class="hintHead"></view>
    <view class="hinContent">
      <image src="/images/videoCall/hintBack.png"></image>
      <view class="hintText">
        <view class="hintD">
          {{hintText}}
          <!-- 剪辑视频时间已上传，请耐心等待返回结果。 -->
        </view>
      </view>
      <view class="hintButtom" bindtap="hintButtom">
        <text>我知道了</text>
      </view>
    </view>
  </view>

