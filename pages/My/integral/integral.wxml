<view>
  <view class="head">
    <image class="hd_bj" src="/images/jfbj.png"></image>
    <text class="jf_detailed" bindtap="jfDetailed">积分明细</text>
    <view class="user">
      <!-- <image src="/images/zhy3.jpg"></image> -->
      <image wx:if='{{!img}}' src="/images/login.png"></image>
      <image wx:if='{{img}}' src="https://hulu.ehualu.com:28080/gourdbaby/img/{{img}}"></image>
      <view>积分：0</view>
      <text>已连续登录0天</text>
    </view>
  </view>
  <view class="cont">
    <view class="cot_title">积分任务</view>  
    <view class="list">
      <view class="item" wx:for="{{list}}" wx:key='id'>
        <!-- <image class="jf_icon" src="/images/login.png"></image> -->
      <image class="jf_icon" wx:if='{{!img}}' src="/images/login.png"></image>
      <image class="jf_icon" wx:if='{{img}}' src="https://hulu.ehualu.com:28080/gourdbaby/img/{{img}}"></image>
        <view class="item_info">
          <view class="item_in_t">
            <text>{{item.integralRuleName}}</text>
            <text>+{{item.integralRuleValue}}</text>
          </view>
          <!-- <view class="item_in_b">前往浇水页面,购买育儿课程或相关商品</view> -->
        </view>
        <view wx:if='{{index == 0}}' class="item_state no">完成</view>
        <view wx:else class="item_state go" bindtap="goMoney">前往赚取</view>
      </view>
    </view>
  </view>
</view>