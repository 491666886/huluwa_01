.footer{
  height: 90rpx;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;  
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer text{
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 36rpx;
  border-radius:6rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
}
.footer text:nth-child(1){
  background-color: #fff;
  color: #222;
}
.footer text:nth-child(2){
  background-color: #FF911D;
  color: #fff;
}




