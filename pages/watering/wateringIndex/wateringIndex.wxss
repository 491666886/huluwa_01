
.hd{
  padding: 0 40rpx;
}
.search{
  border: 1px solid #E5E5E5;
  height: 60rpx;
  display: flex;
  align-items: center;
  background-color: #F7F8FA;
  border-radius: 30rpx;
  padding: 0 24rpx 0 12rpx;
  font-size: 28rpx;
}
.search icon{
  margin-right: 12rpx;
}
.search input{
  flex: 1;
}
.classify{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  align-items: center;
}
.classify view{
  display: flex;
  justify-content: center;
  flex:auto;
}
.classify text{
  padding: 10px 0;
}
.classify .active{
  color: #ff9421;
  padding-bottom: 8px;
  border-bottom: 2px solid #ff9421;
}
.two_classify{
  padding: 20rpx;
  background-color: #F7F8FA;
  overflow: hidden;
}
.two_classify text{
  height: 52rpx;
  line-height: 52rpx;
  float: left;
  border-radius: 26rpx;
  font-size: 24rpx;
  padding:0 20rpx;
  margin: 10rpx;
  border:1px solid #E5E5E5;
  background-color: #fff;
}
.two_classify .active{
  background-color: #FF911D;
  color: #FFFFFF;
}
.list_cot{
  padding: 0 20rpx;
}
.item{
  padding: 20rpx 0;
  display: flex;
  border-bottom: 1px solid #E5E5E5;
}
.item_lt{
  width: 270rpx;
  height: 180rpx;
  position: relative;
  margin-right: 20rpx;
}
.item_lt text{
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  font-size: 24rpx;
  padding: 10rpx 16rpx;
  background-color: #c0bfbf94;
  border-radius: 24rpx;
  color: #fff;
}
.item_lt image{
  width: 100%;
  height: 180rpx;
}
.item_video_info{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.video_num{
  margin-bottom: 8rpx;
}
.video_num image{
  width: 20rpx;
  height: 20rpx;
  margin-right: 8rpx;
}
.video_in{
  font-size: 24rpx;
  color: #999999;
}
.img{
width: 750rpx;
  height: 1240rpx;

}
.notObj{
  font-size: 40rpx;
  text-align: center;
  font-weight: bold;
  margin-top: 60rpx;
}