page{
  background: #f7f8fa;
}
.box{
  padding: 30rpx 0;
}
.cont{
  padding: 0 30rpx;
  background-color: #fff;
  margin-bottom: 60rpx;
  font-size: 30rpx;
}
.phone{
  height: 90rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #E5E5E5;
}
.phone text,.code_l text{
  color: #222222;
  font-weight:500;
  margin-right: 70rpx;
}
.phone input,.code_l input{
  flex: 1;
}

.code{
  height: 90rpx;
  align-items: center;
  display: flex;
  justify-content: space-between;
}
.code_l{
  display: flex;
  align-items: center;
}
.code_r{
  color: #FE8737;
  flex: auto;
  display: flex;
}
.time{
  color: #FE8737;
}
.next{
  margin: 0 30rpx;
  line-height: 90rpx;
  height: 90rpx;
  background:linear-gradient(0deg,rgba(254,131,56,1),rgba(255,169,48,1));
  border-radius:10rpx;
  font-size:36rpx;
  font-weight:400;
  text-align: center;
  color: #fff;
}